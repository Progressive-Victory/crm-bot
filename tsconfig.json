{
	"compilerOptions": {
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": false,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noImplicitAny": false,
		"lib": ["ESNext"],
		"target": "ESNEXT",
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"sourceMap": true,
		"inlineSources": true,

		"outDir": "./dist",
		"rootDir": "src",
		"baseUrl": "./src",
		"paths": {
			"@Client": ["./Client"],
			"@i18n": ["./i18n"],
			"@util/*": ["./util/*"],
			"@builders/*": ["./commands/chat/builders/*"],
			"@execution/*": ["./commands/chat/execution/*"],
			"src/*": ["./*"]
		}
	},
	"exclude": ["**/__tests__/*.ts", "node_modules", "jest.config.ts"],
	"include": ["**/*.ts", "__tests__/test.ts", "src/**/*"]
}
