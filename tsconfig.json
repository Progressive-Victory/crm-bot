{
	"compilerOptions": {
		"module": "NodeNext",
        "moduleResolution": "NodeNext",
        "rootDir": "./src/",
        "target": "ESNEXT",
        "typeRoots": [
            "node_modules/@types"
        ],
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
        "experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
        "importHelpers": true,
		"isolatedModules": true,
        "noFallthroughCasesInSwitch": true,
		"removeComments": true,
        "resolveJsonModule": true,
		"skipLibCheck": true,
        "sourceMap": true,
        "strict": false,
        "strictPropertyInitialization": false,
		"allowJs": true,
		"noEmit": false,
		"noImplicitAny": false,
		"lib": ["ESNext"],
		"inlineSources": true,
		"outDir": "./dist",
		"baseUrl": "./src",
	},
	"exclude": ["dist", "**/__tests__/*.ts", "node_modules", "eslint.config.js"],
	"include": ["**/*.ts", "__tests__/test.ts", "src/**/*"]
}
