{
	"name": "crm-bot",
	"version": "3.0.0",
	"repository": "git@github.com:Progressive-Victory/crm-bot.git",
	"author": {
		"name": "Isabella",
		"email": "okami@progress.win"
	},
	"license": "MIT",
	"private": true,
	"main": "./dist/index.js",
	"scripts": {
		"run": "node .",
		"build": "rimraf dist && swc ./src --out-dir dist",
		"prestart": "yarn build",
		"start": "yarn run run",
		"test": "jest",
		"dev": "yarn start | pino-pretty -i pid,hostname -t 'yyyy-mm-dd HH:MM:ss'",
		"prepm2": "yarn build",
		"pm2": "pm2 start dist/index.js --name crm-bot",
		"format": "prettier -w .",
		"prepare": "husky install",
		"precommit": "lint-staged",
		"lint": "eslint --fix {src,test}/**/*.{js,ts,jsx,tsx} --no-error-on-unmatched-pattern",
		"style": "prettier-eslint \"src/**/*.ts\" --write && yarn lint"
	},
	"engines": {
		"node": ">=16.9.0"
	},
	"dependencies": {
		"@fluent/bundle": "^0.18.0",
		"discord.js": "^14.11.0",
		"dotenv": "^16.0.3",
		"mongodb": "^5.3.0",
		"node-fetch": "2.6.9",
		"pino": "^8.11.0",
		"pino-pretty": "^10.0.0",
		"rimraf": "^5.0.0",
		"source-map-support": "^0.5.21"
	},
	"devDependencies": {
		"@babel/preset-env": "^7.22.2",
		"@babel/preset-typescript": "^7.21.5",
		"@swc/cli": "^0.1.62",
		"@swc/core": "^1.3.54",
		"@types/jest": "^29.5.1",
		"@typescript-eslint/eslint-plugin": "^5.59.1",
		"@typescript-eslint/parser": "^5.59.1",
		"babel-jest": "^29.5.0",
		"eslint": "^8.39.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-import": "^2.27.5",
		"husky": "^8.0.3",
		"jest": "^29.5.0",
		"lint-staged": "^13.2.2",
		"nodemon": "^2.0.22",
		"prettier": "^2.8.8",
		"prettier-eslint": "^15.0.1",
		"prettier-eslint-cli": "^7.1.0",
		"ts-jest": "^29.1.0",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.4"
	},
	"lint-staged": {
		"{src,test}/**/*.{js,ts,jsx,tsx}": [
			"prettier --write -u",
			"eslint --fix"
		],
		"!**/*.{js,ts,jsx,tsx}": "prettier --write -u"
	}
}
