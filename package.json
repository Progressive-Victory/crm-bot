{
	"name": "crm-bot",
	"version": "4.0.0",
	"repository": {
		"type": "git",
		"url": "git+https://https://github.com/Progressive-Victory/crm-bot.git"
	},
	"author": {
		"name": "William Bowen",
		"email": "wbowen@progress.win"
	},
	"bugs": {
		"url": "https://github.com/Progressive-Victory/crm-bot/issues"
	},
	"license": "MIT",
	"private": true,
	"type": "module",
	"main": "./dist/index.js",
	"scripts": {
		"prebuild": "bash rm_dist.sh",
		"build": "swc ./src --out-dir dist",
		"postbuild": "bash sme.sh",
		"start": "node --env-file=.env .",
		"predev": "yarn build",
		"dev": "yarn start | pino-pretty -i pid,hostname -t 'yyyy-mm-dd HH:MM:ss'",
		"prepm2": "yarn build",
		"pm2": "pm2 start dist/index.js --name crm-bot",
		"lint": "eslint --fix {src,test}/**/*.{js,ts,jsx,tsx} --no-error-on-unmatched-pattern"
	},
	"engines": {
		"node": ">=20.12.0"
	},
	"dependencies": {
		"@fluent/bundle": "^0.18.0",
		"discord.js": "14.14.1",
		"pino": "8.20.0"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3.0.2",
		"@stylistic/eslint-plugin": "^1.7.2",
		"@types/node": "^20.12.7",
		"@typescript-eslint/eslint-plugin": "^7.7.0",
		"@typescript-eslint/parser": "^7.7.0",
		"eslint": "8.57.0",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-jsdoc": "^48.2.3",
		"pino-pretty": "^11.0.0",
		"typescript": "^5.4.5"
	}
}
