{
	"name": "crm-bot",
	"version": "3.0.0",
	"repository": "git@github.com:Progressive-Victory/crm-bot.git",
	"author": {
		"name": "Isabella",
		"email": "okami@progress.win"
	},
	"license": "MIT",
	"private": true,
	"main": "./dist/index.js",
	"scripts": {
		"build": "swc ./src --out-dir dist",
		"start": "node .",
		"test": "jest",
		"predev": "yarn build",
		"dev": "yarn start | pino-pretty -i pid,hostname -t 'yyyy-mm-dd HH:MM:ss'",
		"prepm2": "yarn build",
		"pm2": "pm2 start dist/index.js --name crm-bot",
		"format": "prettier -w .",
		"prepare": "husky install",
		"precommit": "lint-staged",
		"lint": "eslint --fix {src,test}/**/*.{js,ts,jsx,tsx} --no-error-on-unmatched-pattern",
		"style": "prettier-eslint \"src/**/*.ts\" --write && yarn lint"
	},
	"engines": {
		"node": ">=20.9.0"
	},
	"dependencies": {
		"@fluent/bundle": "^0.18.0",
		"discord-client": "Progressive-Victory/discord-client",
		"discord.js": "^14.13.0",
		"dotenv": "^16.3.1",
		"module-alias": "^2.2.3",
		"mongoose": "^7.6.3",
		"node-fetch": "^3.3.2",
		"pino": "^8.16.1",
		"pino-pretty": "^10.2.3",
		"source-map-support": "^0.5.21"
	},
	"devDependencies": {
		"@babel/preset-env": "^7.23.2",
		"@babel/preset-typescript": "^7.23.2",
		"@swc/cli": "^0.1.62",
		"@swc/core": "^1.3.95",
		"@types/jest": "^29.5.6",
		"@typescript-eslint/eslint-plugin": "^6.9.0",
		"@typescript-eslint/parser": "^6.9.0",
		"babel-jest": "^29.7.0",
		"eslint": "^8.52.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-import": "^2.29.0",
		"husky": "^8.0.3",
		"jest": "^29.7.0",
		"lint-staged": "^15.0.2",
		"prettier": "^3.0.3",
		"prettier-eslint": "^16.1.1",
		"prettier-eslint-cli": "^8.0.1",
		"ts-jest": "^29.1.1",
		"ts-node": "^10.9.1",
		"typescript": "^5.2.2"
	},
	"lint-staged": {
		"src/**/*.ts": [
			"prettier --write",
			"eslint --fix"
		],
		"!**/*.{js,ts,jsx,tsx}": "prettier --write -u"
	},
	"_moduleAliases": {
		"@i18n": "dist/i18n",
		"@util": "dist/util",
		"@builders": "dist/commands/chat/builders",
		"@execution": "dist/commands/chat/execution",
		"src": "dist"
	}
}
